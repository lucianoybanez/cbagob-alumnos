@model GrupoVista
@if (Model.ListaAlumnos != null && Model.ListaAlumnos.Count > 0)
{ 
    <div id="grilla" style="text-align: center;">
        <table class="TablaPersonal" align="center" width="690px" cellpadding="0" cellspacing="0">
            <thead>
                <tr>
                    <th height="30" width="180px">
                        <div align="center">
                            Nombre</div>
                    </th>
                    <th height="30" width="180px">
                        <div align="center">
                            Apellido</div>
                    </th>
                    <th height="30">
                        <div align="center">
                            Dni</div>
                    </th>
                    <th height="30">
                        <div align="center">
                            Fecha Nacimiento</div>
                    </th>
                    <th height="30">
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ListaAlumnos)
                {
                    <tr>
                        <td height="30">
                            @item.Nov_Nombre
                        </td>
                        <td height="30">
                            @item.Nov_Apellido
                        </td>
                        <td height="30">
                            @item.Nro_Documento
                        </td>
                        <td height="30">
                            @item.Fecha_Nacimiento.ToShortDateString()
                        </td>
                        <td height="30">
                            @Html.ActionLink("Unir al Grupo", "AsignarAlumno", "Grupos", new { id_grupo = Model.Id_Grupo, id_alumno = item.Id_Alumno, id_condicon_curso = Model.Id_Condicion_Curso }, new { @class = "btnIngresar" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div id="tab" style="text-align: center;">
        <table align="center" width="690px" id="mytable">
            <thead>
                <tr>
                    <th height="30">
                        <div align="center">
                            SIN DATOS</div>
                    </th>
                </tr>
            </thead>
        </table>
    </div>
   
}
