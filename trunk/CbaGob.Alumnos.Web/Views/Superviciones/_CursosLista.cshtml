@model SupervicionVista
@if (Model.Cursos.CondicionesCursos != null && Model.Cursos.CondicionesCursos.Count > 0)
{ 
    <div id="tab" style="text-align: center;">
        <table class="TablaPersonal" align="center" width="690px" cellpadding="0" cellspacing="0">
            <thead>
                <tr>
                    <th height="30">
                        <div align="left">
                            Curso</div>
                    </th>
                    <th height="30">
                        <div align="left">
                            Modalidad</div>
                    </th>
                    <th height="30">
                        <div align="left">
                            Programa
                        </div>
                    </th>
                    <th height="30">
                        <div align="right" style="margin-right: 2px;">
                            Acción
                        </div>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Cursos.CondicionesCursos)
                {
                    <tr>
                        <td align="left" height="28">
                            @if (item.NombreCurso.Length < 30)
                            {
                                @item.NombreCurso
                            }
                            else
                            {
                                @(item.NombreCurso.ToString().Substring(1, 29) + " ...")
                            }
                        </td>
                        <td align="left" height="28">
                            @if (item.NombreModalidad.Length < 30)
                            {
                                @item.NombreModalidad
                            }
                            else
                            {
                                @(item.NombreModalidad.ToString().Substring(1, 29) + " ...")
                            }
                        </td>
                        <td align="left" height="28">
                            @if (item.NombrePrograma.Length < 30)
                            {
                                @item.NombrePrograma
                            }
                            else
                            {
                                @(item.NombrePrograma.ToString().Substring(1, 29) + " ...")
                            }
                        </td>
                        <td align="right" style="margin-right: 2px;">
                            @Html.ActionLink("Ver Módulos", "VerGrupos", "Superviciones", new { idCondicionCurso = item.IdCondicionCurso, IdInstitucion = item.IdInstitucion }, new { @class = "btnIngresar" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    @Html.Partial("_SinDatos", "Seleccione una Institución")
}
