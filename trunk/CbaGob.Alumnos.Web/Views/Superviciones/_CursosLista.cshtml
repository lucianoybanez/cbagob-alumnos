@model SupervicionVista
@if (Model.Cursos.CondicionesCursos != null && Model.Cursos.CondicionesCursos.Count > 0)
{ 
    <div id="tab" style="text-align: center;">
        <table class="TablaPersonal" align="center" width="690px" cellpadding="0" cellspacing="0">
            <thead>
                <tr>
                    <th height="30">
                        <div align="left">
                            Curso</div>
                    </th>
                    <th height="30">
                        <div align="left">
                            Modalidad</div>
                    </th>
                    <th height="30">
                        <div align="left">
                            Nivel</div>
                    </th>
                    <th height="30">
                        <div align="left">
                            Programa
                        </div>
                    </th>
                    <th height="30">
                        <div align="right" style="margin-right: 2px;">
                            Accion
                        </div>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Cursos.CondicionesCursos)
                {
                    <tr>
                        <td align="left" height="28">
                            @item.NombreCurso
                        </td>
                        <td align="left" height="28">
                            @item.NombreModalidad
                        </td>
                        <td align="left" height="28">
                            @item.NombreNivel
                        </td>
                        <td align="left" height="28">
                            @item.NombrePrograma
                        </td>
                        <td align="right" style="margin-right: 2px;">
                            @Html.ActionLink("Ver Grupos", "VerGrupos", "Superviciones", new { idCondicionCurso = item.IdCondicionCurso, IdInstitucion = item.IdInstitucion }, new { @class = "btnIngresar" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    @Html.Partial("_SinDatos", "Seleccione una Institucion")
}
