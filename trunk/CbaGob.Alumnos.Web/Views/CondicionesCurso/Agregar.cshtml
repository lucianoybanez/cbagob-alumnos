@model CondicionCursoVista
@{
    ViewBag.Title = "Instituciones";
    Layout = "~/Views/Shared/_MasterSGC.cshtml";
}
@section Scripts{
    @Content.Script("CbaGob.Alumnos.CondicionesCurso.js", Url)
}
<div class="box">
    <h2>
        Agregar Curso a Institucion</h2>
    <table align="center" style="width: 700px;">
        <tr>
            <td class="style1" style="font-weight: bold">
                <div id="titulo">
                </div>
                @using (Html.BeginForm("GuardarCondicionCurso", "CondicionesCurso", FormMethod.Post, null))
                { 
                    @Html.HiddenFor(c => c.Accion)
                    @Html.HiddenFor(c => c.IdCondicionCurso)
                    @Html.HiddenFor(c => c.IdInstitucion)
                    @Html.ValidationSummary(true)
                    <br />
                    <fieldset style="font-family: Arial, Helvetica, sans-serif; font-size: 12px; width: 700px;">
                        <legend style="color: #FF9900"><b>Datos del Curso</b></legend>
                        <table align="left" style="font-family: Arial, Helvetica, sans-serif; font-size: 12px;
                            width: 700px;">
                            <tr>
                                <td>
                                    <b>Nombre de la Institucion:</b>
                                </td>
                                <td>
                                    @Html.TextBoxFor(c => c.NombeInstitucion, new { style = "width:200px;", MaxLength = "50", disabled = "disabled" })
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <b>Nombre del Curso:</b>
                                </td>
                                <td>
                                    @Html.EditorFor(c => c.Curso)
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <b>Estado del Curso:</b>
                                </td>
                                <td>
                                    @Html.EditorFor(c => c.EstadoCurso)
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <b>Modalidad:</b>
                                </td>
                                <td>
                                    @Html.EditorFor(c => c.Modalidad)
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <b>Cantidad de Clases:</b>
                                </td>
                                <td>
                                    @Html.TextBoxFor(c => c.CantidadClases, new { style = "width:50px;", MaxLength = "4" })
                                    @Html.ValidationMessageFor(c => c.CantidadClases, "*")
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <b>Cantidad de Examenes:</b>
                                </td>
                                <td>
                                    @Html.TextBoxFor(c => c.CantidadExamenes, new { style = "width:50px;", MaxLength = "3" })
                                    @Html.ValidationMessageFor(c => c.CantidadExamenes, "*")
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <b>Carga Horaria:</b>
                                </td>
                                <td>
                                    @Html.TextBoxFor(c => c.CargaHoraria, new { style = "width:50px;", MaxLength = "3" })
                                    @Html.ValidationMessageFor(c => c.CargaHoraria, "*")
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <b>Cupo:</b>
                                </td>
                                <td>
                                    @Html.TextBoxFor(c => c.Cupo, new { style = "width:50px;", MaxLength = "3" })
                                    @Html.ValidationMessageFor(c => c.Cupo, "*")
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <b>Presentismo:</b>
                                </td>
                                <td>
                                    @Html.TextBoxFor(c => c.Presentismo, new { style = "width:50px;", MaxLength = "3" })%
                                    @Html.ValidationMessageFor(c => c.Presentismo, "*")
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <b>Presupuesto:</b>
                                </td>
                                <td>
                                    $@Html.TextBoxFor(c => c.Presupuesto, new { style = "width:50px;", MaxLength = "8" })
                                    @Html.ValidationMessageFor(c => c.Presupuesto, "*")
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <b>Fecha Inicio:</b>
                                </td>
                                <td>
                                    @Html.EditorFor(c => c.Fecha_Inicio)
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <b>Fecha Fin:</b>
                                </td>
                                <td>
                                    @Html.EditorFor(c => c.Fecha_Fin)
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <b>Programa:</b>
                                </td>
                                <td>
                                    @Html.EditorFor(c => c.Programa)
                                </td>
                            </tr>
                               <tr>
                                <td>
                                    <b>Nro Resolucion:</b>
                                </td>
                                <td>
                                    @Html.TextBoxFor(c => c.Nro_Resolucion, new { style = "width:100px;", MaxLength = "3" })
                                    @Html.ValidationMessageFor(c => c.Nro_Resolucion, "*")
                                </td>
                            </tr>
                        </table>
                    </fieldset>
                    <table id="btnfin" align="center" width="700px">
                        <tr>
                            <td align="right" valign="middle">
                                <input type="submit" value="Guargar" class="btnIngresar" />
                                @Html.ActionLink("Cancelar", "Ver", "Instituciones", new { INST_ID = Model.IdInstitucion }, new { Class = "btnIngresar" })
                            </td>
                        </tr>
                    </table>
                }
            </td>
        </tr>
    </table>
</div>
