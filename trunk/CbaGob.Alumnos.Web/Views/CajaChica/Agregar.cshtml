@model CajaChicaVista
@{
    ViewBag.Title = "Instituciones";
    ViewBag.SubMenuSelected = "Instituciones";
    Layout = "~/Views/Shared/_MasterSGC.cshtml";
}
@section Scripts{
   @Content.Script("CbaGob.Alumnos.CajaChica.js", Url)
}
<div class="box">
    <h2>
        Agregar Caja a Institución</h2>
    <table align="center" style="width: 700px;">
        <tr>
            <td class="style1" style="font-weight: bold">
                <div id="titulo">
                </div>
                @using (Html.BeginForm("GuardarCaja", "CajaChica", FormMethod.Post, new { Id = "FormularioCajaChica" }))
                { 
                  
                    @Html.HiddenFor(c => c.Id_Institucion)
                    @Html.ValidationSummary(true)
                    <br />
                    <fieldset style="font-family: Arial, Helvetica, sans-serif; font-size: 12px; width: 700px;">
                        <legend style="color: #FF9900">Datos de la Caja</legend>
                        <table align="left" style="font-family: Arial, Helvetica, sans-serif; font-size: 12px;
                            width: 700px;">
                            <tr>
                                <td>
                                    Nombre de la Institución:
                                </td>
                                <td>
                                    @Html.TextBoxFor(c => c.NombreInstitucion, new { style = "width:350px;", MaxLength = "50", disabled = "disabled" })
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    Estado de la Caja:
                                </td>
                                <td>
                                    @Html.EditorFor(c => c.EstadoCaja)
                                </td>
                            </tr>
                            <tr>
                                <td>
                                   @Html.LabelFor(c => c.Monto)
                                </td>
                                <td>
                                    @Html.TextBoxFor(c => c.Monto, new { style = "width:150px;", MaxLength = "50" })
                                    @Html.ValidationMessageFor(c=> c.Monto,"*")
                                </td>
                            </tr>
                        </table>
                    </fieldset>
                    <table id="myIntituciones" align="center" width="700px">
                        <tr>
                            <td align="right" valign="middle">
                                <input type="submit" value="Guardar" class="btnIngresar" />
                                @Html.ActionLink("Cancelar", "Ver", "Instituciones", new { INST_ID = Model.Id_Institucion }, new { Class = "btnIngresar" })
                            </td>
                        </tr>
                    </table>
                }
            </td>
        </tr>
    </table>
</div>

