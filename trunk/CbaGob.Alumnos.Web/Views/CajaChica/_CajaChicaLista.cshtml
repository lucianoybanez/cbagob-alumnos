@model CajaChicasVista
@if (Model.ListaCajaChica != null && Model.ListaCajaChica.Count > 0)
{ 
    <div id="tab" style="text-align: center;">
        <table class="TablaPersonal" align="center" width="722px" cellpadding="0" cellspacing="0">
            <thead>
                <tr>
                    <th height="30">
                        <div align="center">
                            Monto</div>
                    </th>
                    <th height="30">
                        <div align="center">
                            Estado</div>
                    </th>
                    <th height="30">
                        <div align="center">
                            Accion</div>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ListaCajaChica)
                {
                    <tr>
                        <td align="left" height="28">
                            @item.Monto
                        </td>
                        <td align="left">
                            @item.NombreEstadoCaja
                        </td>
                        <td>
                            @Html.ActionLink("Modificar", "Modificar", "Establecimientos", new { Id_Caja_Chica = item.Id_Caja_Chica }, new { @class = "btnIngresar" })
                            @Html.ActionLink("Eliminar", "Eliminar", "Establecimientos", new { Id_Caja_Chica = item.Id_Caja_Chica }, new { @class = "btnIngresar" })
                            @Html.ActionLink("Realizar Movimiento", "Eliminar", "Establecimientos", new { Id_Caja_Chica = item.Id_Caja_Chica }, new { @class = "btnIngresar" })
                        </td>
                    </tr>
                }
                <tr>
                    <td align="left" valign="middle" colspan="2" height="20">
                        <div id="resumenPag" style="height: 20px; padding: 10px 5px 0 2px;">
                            @*  <div align="center">
                                <ul id="pagination-clean">
                                  <li class="previous-off">Ant</li>
                                  <li class="active">1</li>
                                  <li><a href="?page=2">2</a></li>
                                  <li><a href="?page=3">3</a></li>
                                  <li><a href="?page=4">4</a></li>
                                  <li><a href="?page=5">5</a></li>
                                  <li><a href="?page=6">6</a></li>
                                  <li><a href="?page=7">7</a></li>
                                  <li class="next"><a href="?page=2">Sig</a></li>
                                </ul>
                              </div>*@
                        </div>
                    </td>
                    <td align="right" valign="bottom" colspan="2" height="20">
                        <div style="height: 20px; padding: 15px 5px 0 2px;">
                            @Html.ActionLink("Agregar Caja", "Agregar", "Establecimientos", new { @class = "btnIngresar" })
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
}
else
{
    <table id="grilla" align="center" width="722px" cellpadding="0" cellspacing="0">
        <tr>
            <td width="722px">
                @Html.Partial("_SinDatos", "Caja Chica")
            </td>
        </tr>
        <tr>
            <td align="right" width="722px">
                @Html.ActionLink("Agregar Caja", "Seleccion", "Factura", null, new { @class = "btnIngresar" })
            </td>
    </table>
}
