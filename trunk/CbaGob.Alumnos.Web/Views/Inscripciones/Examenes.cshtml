@model InscripcionesVista
@{
    ViewBag.Title = "Inscripciones";
    ViewBag.SubMenuSelected = "Examenes";
    Layout = "~/Views/Shared/_MasterSGC.cshtml";
}
@section Stylesheets {
    @Content.Stylesheet("css/instituciones.css", Url)
}
@section Scripts{
    @Content.Script("CbaGob.Alumnos.Inscripciones.js", Url)
}
<div class="box">
    <h2>
        Exámenes - Listado de Alumnos</h2>
    <table align="center" width="700px" cellpadding="0" cellspacing="0">
        <tr>
            <td class="style1" style="font-weight: bold">
                <div id="titulo">
                    @Html.ValidationSummary()
                </div>
                <div id="DivExamenes">
                    @using (Ajax.BeginForm("GetListaInscriptos", "Inscripciones", new AjaxOptions()
                                                                              {
                                                                                  HttpMethod = "GET",
                                                                                  InsertionMode = InsertionMode.Replace,
                                                                                  OnSuccess = "cbaAlumnosInscripciones.hideEliminarButton();",
                                                                                  UpdateTargetId = "grilla"
                                                                              }))
                    {
                        <table align="center" style="font-family: Arial, Helvetica, sans-serif; font-size: 12px;
                            width: 700px;">
                            <tr>
                                <td>
                                    @Html.ValidationSummary(true)
                                    <fieldset style="font-family: Arial, Helvetica, sans-serif; font-size: 12px; width: 700px;
                                        text-align: center;">
                                        <legend style="color: #FF9900">Buscar Alumno</legend>
                                        <table align="left" style="font-family: Arial, Helvetica, sans-serif; font-size: 12px;
                                            width: 700px;">
                                            <tr>
                                                <td align="left">
                                                    Nombre:
                                                </td>
                                                <td align="left" valign="middle">
                                                    <input type="text" name="nombre" id="nombre" placeholder="@PlaceHolderConstants.Nombre" />
                                                </td>
                                            </tr>
                                             <tr>
                                                <td align="left">
                                                    Apellido:
                                                </td>
                                                <td align="left" valign="middle">
                                                    <input type="text" name="apellido" id="apellido" placeholder="@PlaceHolderConstants.Apellido" />
                                                </td>
                                            </tr>
                                             <tr>
                                                <td align="left">
                                                    DNI:
                                                </td>
                                                <td align="left" valign="middle">
                                                    <input type="text" name="dni" id="dni" placeholder="@PlaceHolderConstants.Dni" />
                                                </td>
                                            </tr>
                                             <tr>
                                                <td align="left">
                                                    Institución:
                                                </td>
                                                <td align="left" valign="middle">
                                                    <input type="text" name="institucion" id="institucion" placeholder="@PlaceHolderConstants.InstitucionNombre" />
                                                </td>
                                            </tr>
                                             <tr>
                                                <td align="left">
                                                    
                                                </td>
                                                <td align="right" valign="middle">
                                                    <input type="submit" value="Buscar" class = "btnIngresar" />&nbsp;&nbsp;&nbsp;&nbsp;
                                                </td>
                                            </tr>
                                        </table>
                                    </fieldset>
                                </td>
                            </tr>
                        </table>
                        
                    }
                    <div style="text-align: center;">
                        <table id="grilla">
                        </table>
                    </div>
                </div>
            </td>
        </tr>
    </table>
</div>
