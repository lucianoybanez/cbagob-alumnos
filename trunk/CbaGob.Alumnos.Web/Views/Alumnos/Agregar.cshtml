        </tr>
        <tr>
            <td>
                Dni
            </td>
            <td align="left" valign="middle">
                @Html.TextBoxFor(c => c.Nro_Documento, new { disabled = "disabled", style = "width:100px;", MaxLength = "50", Class = "asd" })
