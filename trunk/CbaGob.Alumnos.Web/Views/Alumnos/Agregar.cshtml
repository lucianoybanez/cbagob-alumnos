@model AlumnosVista
@{
    ViewBag.Title = "SGC - Gobierno de Córdoba - Alumnos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("Agregar_Alumno", "Alumnos", FormMethod.Post, new { Id = "FormularioAlumnos" }))
{ 
