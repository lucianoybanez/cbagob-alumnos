@model IList<IPersona>
<table  align="center" style="font-family:Arial, Helvetica, sans-serif; font-size:12px; width:700px;">
    <tr>
        <td>
           <fieldset style="font-family: Arial, Helvetica, sans-serif; font-size: 12px; width: 700px; text-align: center;">
                <legend>Busqueda</legend>
                <table  align="center" style="font-family:Arial, Helvetica, sans-serif; font-size:12px; width:700px;">
                    <tr>
                        <td align="right">
                           <b> Nombre:</b>
                        </td>
                        <td align="left">
                            <input type="text" />
                        </td>
                        <td align="right">
                             <b>Apellido: </b>
                        </td>
                        <td align="left">
                            <input type="text" />
                        </td>
                    </tr>
                    <tr>
                        <td align="right">
                             <b>Dni: </b>
                        </td>
                        <td align="left">
                            <input type="text" />
                        </td>
                        <td align="right">
                             <b>Cuil: </b>
                        </td>
                        <td align="left">
                            <input type="text" />
                        </td>
                    </tr>
                    <tr>
                        <td colspan="4" align="right" height="35">
                            <input type="button" value="Buscar" Class = "btnIngresar"/>
                            <input type="button" value="Agregar Persona" Class = "btnIngresar"/>
                        </td>
                    </tr>
                </table>
            </fieldset>
        </td>
    </tr>
    <tr>
        <td>
            @if (Model != null && Model.Count > 0)
            { 
                <div id="tab" style="text-align: center;">
                    <table  align="center" style="font-family:Arial, Helvetica, sans-serif; font-size:12px; width:700px;">
                        <thead>
                            <tr>
                                <th height="30">
                                    <div align="center">
                                        NOMBRE</div>
                                </th>
                                <th height="30">
                                    <div align="center">
                                        APELLIDO</div>
                                </th>
                                <th height="30">
                                    <div align="center">
                                        DNI</div>
                                </th>
                                <th height="30">
                                    <div align="center">
                                        CUIL</div>
                                </th>
                                <th height="30">
                                    <div align="center">
                                    </div>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td align="center">
                                        @item.Nov_Nombre
                                    </td>
                                    <td align="center">
                                        @item.Nov_Apellido
                                    </td>
                                    <td align="center">
                                        @item.Nro_Documento
                                    </td>
                                    <td align="center">
                                        @item.Cuil
                                    </td>
                                    <td align="center">
                                        <img onclick="Pesonas(@item.Id_Persona,'@item.Nov_Nombre','@item.Nov_Apellido', '@item.Nro_Documento', '@item.Cuil' );"  src=@Content.ImageSite("seleccionar.jpg", Url) width="25" height="25"  />
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div id="tab" style="text-align: center;">
                    <table align="center" id="mytable">
                        <thead>
                            <tr>
                                <th height="30">
                                    <div align="center">
                                        SIN DATOS</div>
                                </th>
                            </tr>
                        </thead>
                    </table>
                </div>
            }
        </td>
    </tr>
</table>
