@model AlumnosVista
@{
    ViewBag.Title = "Instituciones";
    ViewBag.SubMenuSelected = "Alumnos";
    Layout = "~/Views/Shared/_MasterSGC.cshtml";
}
@section Scripts{
    @Content.Script("CbaGob.Alumnos.Alumnos.js", Url)
}
<div class="box">
    <h2>
        Consultar Alumno</h2>
    <table align="center" style="width: 700px;">
        <tr>
            <td class="style1" style="font-weight: bold">
                <div id="titulo">
                </div>
                @using (Html.BeginForm("Eliminar_Alumno", "Alumnos", FormMethod.Post, new { Id = "FormularioAlumnos" }))
                { 
    
                    <table align="center" id="mytable" style="font-family: Arial, Helvetica, sans-serif;
                        font-size: 12px; width: 700px;">
                        <tr>
                            <td>
                                <fieldset style="font-family: Arial, Helvetica, sans-serif; font-size: 12px; width: 700px;">
                                    <legend>Datos Alumno</legend>
                                    <table align="center" style="font-family: Arial, Helvetica, sans-serif; font-size: 12px;
                                        width: 700px;">
                                        <tr>
                                            <td align="left">
                                                Nombre:
                                            </td>
                                            <td align="left" valign="middle">
                                                @Html.TextBoxFor(c => c.Nombre, new { style = "width:200px;", MaxLength = "50", disabled = "disabled" })
                                                @Html.ValidationMessageFor(m => m.Nombre, "*")
                                            </td>
                                        </tr>
                                        <tr>
                                            <td align="left">
                                                Apellido:
                                            </td>
                                            <td align="left" valign="middle">
                                                @Html.TextBoxFor(c => c.Apellido, new { style = "width:200px;", MaxLength = "50", disabled = "disabled" })
                                                @Html.ValidationMessageFor(m => m.Apellido, "*")
                                            </td>
                                        </tr>
                                        <tr>
                                            <td align="left">
                                                Teléfono:
                                            </td>
                                            <td align="left" valign="middle">
                                                @Html.TextBoxFor(c => c.Nro_Telefono, new { style = "width:200px;", MaxLength = "50", disabled = "disabled" })
                                                @Html.ValidationMessageFor(m => m.Nro_Telefono, "*")
                                            </td>
                                        </tr>
                                        <tr>
                                            <td align="left">
                                                Celular:
                                            </td>
                                            <td align="left" valign="middle">
                                                @Html.TextBoxFor(c => c.Nro_Celular, new { style = "width:200px;", MaxLength = "50", disabled = "disabled" })
                                                @Html.ValidationMessageFor(m => m.Nro_Celular, "*")
                                            </td>
                                        </tr>
                                        <tr>
                                            <td align="left">
                                                Provincia:
                                            </td>
                                            <td align="left" valign="middle">
                                                @Html.TextBoxFor(c => c.Provincia, new { style = "width:250px;", MaxLength = "50", disabled = "disabled" })
                                                @Html.ValidationMessageFor(c => c.Provincia, "*")
                                            </td>
                                        </tr>
                                        <tr>
                                            <td align="left">
                                                Localidad:
                                            </td>
                                            <td align="left" valign="middle">
                                                @Html.TextBoxFor(c => c.Localidad, new { style = "width:250px;", MaxLength = "50", disabled = "disabled" })
                                                @Html.ValidationMessageFor(m => m.Localidad, "*")
                                            </td>
                                        </tr>
                                        <tr>
                                            <td align="left">
                                                Barrio:
                                            </td>
                                            <td align="left" valign="middle">
                                                @Html.TextBoxFor(c => c.Barrio, new { style = "width:250px;", MaxLength = "100", disabled = "disabled" })
                                                @Html.ValidationMessageFor(m => m.Barrio, "*")
                                            </td>
                                        </tr>
                                        <tr>
                                            <td align="left">
                                                Número:
                                            </td>
                                            <td align="left" valign="middle">
                                                @Html.TextBoxFor(c => c.Nro, new { style = "width:150px;", MaxLength = "4", disabled = "disabled" })
                                                @Html.ValidationMessageFor(m => m.Nro, "*")
                                            </td>
                                        </tr>
                                        <tr>
                                            <td align="left">
                                                Departamento
                                            </td>
                                            <td align="left" valign="middle">
                                                @Html.TextBoxFor(c => c.Depto, new { style = "width:150px;", MaxLength = "4", disabled = "disabled" })
                                                @Html.ValidationMessageFor(m => m.Depto, "*")
                                            </td>
                                        </tr>
                                        <tr>
                                            <td align="left">
                                                Tipo DNI:
                                            </td>
                                            <td align="left" valign="middle">
                                                @Html.EditorFor(c => c.TipoDocumento)
                                            </td>
                                        </tr>
                                        <tr>
                                            <td align="left">
                                                DNI:
                                            </td>
                                            <td align="left" valign="middle">
                                                @Html.TextBoxFor(c => c.Nro_Documento, new { style = "width:150px;", MaxLength = "50", disabled = "disabled" })
                                                @Html.ValidationMessageFor(m => m.Nro_Documento, "*")
                                            </td>
                                        </tr>
                                        <tr>
                                            <td align="left">
                                                Fecha de Nacimiento:
                                            </td>
                                            <td align="left" valign="middle">
                                                @Html.TextBoxFor(c => c.Fecha_Nacimiento, new { style = "width:72px;", MaxLength = "50", disabled = "disabled" })
                                            </td>
                                        </tr>
                                        <tr>
                                            <td align="left">
                                                CUIL:
                                            </td>
                                            <td align="left" valign="middle">
                                                @Html.TextBoxFor(c => c.Cuil, new { style = "width:150px;", MaxLength = "50", disabled = "disabled" })
                                                @Html.ValidationMessageFor(m => m.Cuil, "*")
                                            </td>
                                        </tr>
                                        <tr>
                                            <td align="left">
                                                Sexo:
                                            </td>
                                            <td align="left" valign="middle">
                                                @Html.EditorFor(c => c.Sexo)
                                            </td>
                                        </tr>
                                        <tr>
                                            <td align="left">
                                                Estado Civil:
                                            </td>
                                            <td align="left" valign="middle">
                                                @Html.EditorFor(c => c.EstadoCivil)
                                            </td>
                                        </tr>
                                        <tr>
                                            <td align="left">
                                                Número Resolución:
                                            </td>
                                            <td align="left" valign="middle">
                                                @Html.TextBoxFor(c => c.Nro_Resolucion, new { style = "width:250px;", MaxLength = "64", disabled = "disabled" })
                                                @Html.ValidationMessageFor(m => m.Nro_Resolucion, "*")
                                            </td>
                                        </tr>
                                    </table>
                                </fieldset>
                            </td>
                        </tr>
                    </table>
                    <table id="btnfin" align="center" width="700px">
                        <tr>
                            <td align="right" valign="middle">
                                @Html.ActionLink("Cancelar", "Index", "Alumnos", new { Class = "btnIngresar" })
                            </td>
                        </tr>
                    </table>
                    @Html.HiddenFor(d => d.Id_Alumno)
                }
            </td>
        </tr>
    </table>
</div>

