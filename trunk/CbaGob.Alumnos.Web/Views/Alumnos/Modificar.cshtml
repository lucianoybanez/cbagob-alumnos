@model AlumnosVista
@{
    ViewBag.Title = "Instituciones";
    ViewBag.SubMenuSelected = "Alumnos";
    Layout = "~/Views/Shared/_MasterSGC.cshtml";
}
@section Scripts{
    @Content.Script("CbaGob.Alumnos.Alumnos.js", Url)
}
<div class="box">
    <h2>
        Modificar Alumno</h2>
    <table align="center" style="width: 700px;">
        <tr>
            <td class="style1" style="font-weight: bold">
                <div id="titulo">
                </div>
                @using (Html.BeginForm("Modificar_Alumno", "Alumnos", FormMethod.Post, new { Id = "FormularioAlumnos" }))
                { 
                    @Html.ValidationSummary(true)
                    <br />
                    <table align="center" id="mytable" style="font-family: Arial, Helvetica, sans-serif;
                        font-size: 12px; width: 700px;">
                        <tr>
                            <td>
                                <fieldset style="font-family: Arial, Helvetica, sans-serif; font-size: 12px; width: 700px;">
                                    <legend><b>Datos Alumno</b></legend>
                                    <table align="center" style="font-family: Arial, Helvetica, sans-serif; font-size: 12px;
                                        width: 700px;">
                                        <tr>
                                            <td align="left">
                                                <b>Nombre:</b>
                                            </td>
                                            <td align="left" valign="middle">
                                                @Html.TextBoxFor(c => c.Nombre, new { style = "width:200px;", MaxLength = "50", Class = "asd" })
                                                @Html.ValidationMessageFor(m => m.Nombre, "*")
                                            </td>
                                        </tr>
                                        <tr>
                                            <td align="left">
                                                <b>Apellido:</b>
                                            </td>
                                            <td align="left" valign="middle">
                                                @Html.TextBoxFor(c => c.Apellido, new { style = "width:200px;", MaxLength = "50", Class = "asd" })
                                                @Html.ValidationMessageFor(m => m.Apellido, "*")
                                            </td>
                                        </tr>
                                        <tr>
                                            <td align="left">
                                                <b>Telefono:</b>
                                            </td>
                                            <td align="left" valign="middle">
                                                @Html.TextBoxFor(c => c.Nro_Telefono, new { style = "width:200px;", MaxLength = "50", Class = "asd" })
                                                @Html.ValidationMessageFor(m => m.Nro_Telefono, "*")
                                            </td>
                                        </tr>
                                        <tr>
                                            <td align="left">
                                                <b>Celular:</b>
                                            </td>
                                            <td align="left" valign="middle">
                                                @Html.TextBoxFor(c => c.Nro_Celular, new { style = "width:200px;", MaxLength = "50", Class = "asd" })
                                                @Html.ValidationMessageFor(m => m.Nro_Celular, "*")
                                            </td>
                                        </tr>
                                        <tr>
                                            <td align="left">
                                                <b>Tipo Dni:</b>
                                            </td>
                                            <td align="left" valign="middle">
                                                @Html.EditorFor(c => c.TipoDocumento)
                                            </td>
                                        </tr>
                                        <tr>
                                            <td align="left">
                                                <b>Dni:</b>
                                            </td>
                                            <td align="left" valign="middle">
                                                @Html.TextBoxFor(c => c.Nro_Documento, new { style = "width:150px;", MaxLength = "50", Class = "asd" })
                                                @Html.ValidationMessageFor(m => m.Nro_Documento, "*")
                                            </td>
                                        </tr>
                                        <tr>
                                            <td align="left">
                                                <b>Fecha de Nacimiento:</b>
                                            </td>
                                            <td align="left" valign="middle">
                                                @Html.EditorFor(c => c.Fecha_Nacimiento)
                                            </td>
                                        </tr>
                                        <tr>
                                            <td align="left">
                                                <b>Cuil:</b>
                                            </td>
                                            <td align="left" valign="middle">
                                                @Html.TextBoxFor(c => c.Cuil, new { style = "width:150px;", MaxLength = "50", Class = "asd" })
                                                @Html.ValidationMessageFor(m => m.Cuil, "*")
                                            </td>
                                        </tr>
                                        <tr>
                                            <td align="left">
                                                <b>Sexo:</b>
                                            </td>
                                            <td align="left" valign="middle">
                                                @Html.EditorFor(c => c.Sexo)
                                            </td>
                                        </tr>
                                        <tr>
                                            <td align="left">
                                                <b>Estado Civil:</b>
                                            </td>
                                            <td align="left" valign="middle">
                                                @Html.EditorFor(c => c.EstadoCivil)
                                            </td>
                                        </tr>
                                        <tr>
                                            <td align="left">
                                                <b>Nro Resolucion:</b>
                                            </td>
                                            <td align="left" valign="middle">
                                                @Html.TextBoxFor(c => c.Nro_Resolucion, new { style = "width:150px;", MaxLength = "50", Class = "asd" })
                                                @Html.ValidationMessageFor(m => m.Nro_Resolucion, "*")
                                            </td>
                                        </tr>
                                    </table>
                                </fieldset>
                            </td>
                        </tr>
                    </table>
                    @Html.HiddenFor(m => m.Id_Alumno)
                    <table id="myIntituciones" align="center" width="700px">
                        <tr>
                            <td align="right" valign="middle">
                                <input type="submit" value="Guargar" class="btnIngresar" />&nbsp;&nbsp;
                                @Html.ActionLink("Cancelar", "Index", "Alumnos", null, new { Class = "btnIngresar" })
                            </td>
                        </tr>
                    </table>
     
                }
            </td>
        </tr>
    </table>
</div>
