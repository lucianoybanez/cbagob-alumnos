@model IList<IAlumnos>
@if (Model != null && Model.Count > 0)
{ 
    <div id="tab" style="text-align: center;">
        <table align="center" id="mytable" width="950px"  cellpadding="0" cellspacing="0">
            <thead>
                <tr>
                    <th height="30">
                        <div align="center">
                            NOMBRE</div>
                    </th>
                    <th height="30">
                        <div align="center">
                            APELLIDO</div>
                    </th>
                    <th height="30">
                        <div align="center">
                            DNI</div>
                    </th>
                    <th height="30">
                        <div align="center">
                            FECHA NACIMIENTO</div>
                    </th>
                    <th height="30">
                        <div align="center">
                        ACCION
                        </div>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td align="left">
                            @item.Nov_Nombre
                        </td>
                        <td align="left">
                            @item.Nov_Apellido
                        </td>
                        <td align="left">
                            @item.Nro_Documento
                        </td>
                        <td align="left">
                            @item.Fecha_Nacimiento.ToShortDateString()
                        </td>
                        <td>
                            @Html.ActionLink("Modificar", "Modificar", "Alumnos", new { id_alumno = item.Id_Alumno }, null)
                            @Html.ActionLink("Eliminar", "Eliminar", "Alumnos", new { id_alumno = item.Id_Alumno }, null)
                        </td>
                    </tr>
                }<tr>
                        <td align="left" colspan="7">
                            &nbsp;
                        </td>
                        
                    </tr>
                    <tr>
                        <td align="left" valign="middle" colspan="4" height="20">
                            <div id="resumenPag" style="height:30px; padding:10px 5px 0 2px;">
                              <div align="center">
                                <ul id="pagination-clean">
                                  <li class="previous-off">Ant</li>
                                  <li class="active">1</li>
                                  <li><a href="?page=2">2</a></li>
                                  <li><a href="?page=3">3</a></li>
                                  <li><a href="?page=4">4</a></li>
                                  <li><a href="?page=5">5</a></li>
                                  <li><a href="?page=6">6</a></li>
                                  <li><a href="?page=7">7</a></li>
                                  <li class="next"><a href="?page=2">Sig</a></li>
                                </ul>
                              </div>
                         </div>
                        </td> 
                        <td align="right" valign="bottom" colspan="3" height="20">
                         <div id="resumenPag" style="height:30px; padding:15px 5px 0 2px;">
                            @Html.ActionLink("Nuevo", "Agregar", "Alumnos", null, new { Class = "btngral" })
                         </div>
                        </td> 
                    </tr>
            </tbody>
        </table>
    </div>
}
else
{
    <div id="tab" style="text-align: center;">
        <table align="center" id="mytable">
            <thead>
                <tr>
                    <th height="30">
                        <div align="center">
                            SIN DATOS</div>
                    </th>
                </tr>
            </thead>
        </table>
    </div>
}

