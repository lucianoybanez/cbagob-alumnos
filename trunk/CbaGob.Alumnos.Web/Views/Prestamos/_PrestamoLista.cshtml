@model PrestamosVista
@if (Model.ListaPrestamo != null && Model.ListaPrestamo.Count > 0)
{ 
    <div style="text-align: center;">
        <table id="grilla" align="center" width="722px" cellpadding="0" cellspacing="0">
            <thead>
                <tr>
                    <th height="30" width="200">
                        <div align="left">
                            Nombre del Equipo</div>
                    </th>
                    <th height="30" width="150">
                        <div align="center">
                            Nombre de la Institución</div>
                    </th>
                    <th height="30" width="100">
                        <div align="center">
                            Fecha Inicio</div>
                    </th>
                    <th height="30" width="100">
                        <div align="center">
                            Fecha Fin</div>
                    </th>
                    <th height="30" align="center">
                        <div align="right" style="margin-right: 2px;">
                            Acción</div>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ListaPrestamo)
                {
                    <tr>
                        <td align="left" height="28">
                            @if (item.NombreEquipo.Length < 30)
                            {
                                @item.NombreEquipo
                            }
                            else
                            {
                                @(item.NombreEquipo.ToString().Substring(1, 29) + " ...")
                            }
                        </td>
                        <td align="center" width="50">
                            @if (item.NombreInstitucion.Length < 30)
                             {
                                @item.NombreInstitucion
                             }
                             else
                             {
                                @(item.NombreInstitucion.ToString().Substring(1, 29) + " ...")
                             }
                        </td>
                        <td align="center" width="50">
                            @item.Fec_Inicio.ToShortDateString()
                        </td>
                        <td align="center" width="50">
                            @item.Fec_Fin.ToShortDateString()
                        </td>
                        <td align="right" style="margin-right: 2px;">
                            @Html.ActionLink("Modificar", "Modificar", "Prestamos", new { id_prestamo = item.Id_Prestamo }, new { @class = "btnIngresar" })
                            @Html.ActionLink("Eliminar", "Eliminar", "Prestamos", new { id_prestamo = item.Id_Prestamo }, new { @class = "btnIngresar" })
                        </td>
                    </tr>
                }
                <tr>
                    <td align="left" valign="middle" colspan="4" height="20">
                        <div id="resumenPag" style="height: 20px; padding: 10px 5px 0 2px;">
                            <div align="center">
                                @*  <ul id="pagination-clean">
                                    <li class="previous-off">Ant</li>
                                    <li class="active">1</li>
                                    <li><a href="?page=2">2</a></li>
                                    <li><a href="?page=3">3</a></li>
                                    <li><a href="?page=4">4</a></li>
                                    <li><a href="?page=5">5</a></li>
                                    <li><a href="?page=6">6</a></li>
                                    <li><a href="?page=7">7</a></li>
                                    <li class="next"><a href="?page=2">Sig</a></li>
                                </ul>*@
                            </div>
                        </div>
                    </td>
                    <td align="right" valign="bottom" colspan="4" height="20">
                        <div style="height: 20px; padding: 15px 5px 0 2px;">
                            @Html.ActionLink("Agregar Préstamo", "Agregar", "Prestamos", new { @class = "btnIngresar" })
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
}
else
{
    <table id="btnfin" align="center" width="722px" cellpadding="0" cellspacing="0">
        <tr>
            <td width="722px">
                @Html.Partial("_SinDatos", "Prestamos")
            </td>
        </tr>
        <tr>
            <td>
                <div align="right" style="height: 20px; padding: 15px 5px 0 2px;">
                    @Html.ActionLink("Agregar Préstamo", "Agregar", "Prestamos", new { @class = "btnIngresar" })
                </div>
            </td>
        </tr>
    </table>
}
