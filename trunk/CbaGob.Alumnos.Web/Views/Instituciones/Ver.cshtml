@model  InstitucionVista
@{
    ViewBag.Title = "Instituciones";
    ViewBag.SubMenuSelected = "Instituciones";
    Layout = "~/Views/Shared/_MasterSGC.cshtml";
}
@section Scripts{
    @Content.Script("CbaGob.Alumnos.Instituciones.js", Url)
}
<div class="box">
    <h2>
        Institución</h2>
    <table align="center" style="width: 622px;">
        <tr>
            <td class="style1" style="font-weight: bold">
                <div id="titulo">
                </div>
                <table align="center" id="mytable" style="font-family: Arial, Helvetica, sans-serif;
                    font-size: 12px; width: 700px;">
                    <tr>
                        <td>
                            <fieldset style="font-family: Arial, Helvetica, sans-serif; font-size: 12px; width: 700px;">
                                <legend style="color: #FF9900"><b>Datos de la Institución</b></legend>
                                <table align="left" class="mybusqueda">
                                    <tr>
                                        <td align="left">
                                            <b>Nombre de la Institucion:</b>
                                        </td>
                                        <td align="left" valign="middle">
                                            @Html.TextBoxFor(c => c.Nombre_Institucion, new { disabled = "disabled", style = "width:400px;", MaxLength = "20" })
                                        </td>
                                    </tr>
                                    <tr>
                                        <td align="left">
                                            <b>Es Propia de la Institución:</b>
                                        </td>
                                        <td align="left" valign="middle">
                                            @Html.CheckBoxFor(c => c.espropia, new { disabled = "disabled" })
                                        </td>
                                    </tr>
                                    <tr>
                                        <td align="left">
                                            <b>Teléfono:</b>
                                        </td>
                                        <td align="left" valign="middle">
                                            @Html.TextBoxFor(c => c.Telefono, new { style = "width:150px;", MaxLength = "30", disabled = "disabled" })
                                            @Html.ValidationMessageFor(m => m.Telefono, "*")
                                        </td>
                                    </tr>
                                    <tr>
                                        <td align="left">
                                            <b>Provincia:</b>
                                        </td>
                                        <td align="left" valign="middle">
                                            @Html.TextBoxFor(c => c.Provincia, new { disabled = "disabled", style = "width:250px;", MaxLength = "50" })
                                        </td>
                                    </tr>
                                    <tr>
                                        <td align="left">
                                            <b>Localidad:</b>
                                        </td>
                                        <td align="left" valign="middle">
                                            @Html.TextBoxFor(c => c.Localidad, new { disabled = "disabled", style = "width:250px;", MaxLength = "50" })
                                        </td>
                                    </tr>
                                    <tr>
                                        <td align="left">
                                            <b>Barrio:</b>
                                        </td>
                                        <td align="left" valign="middle">
                                            @Html.TextBoxFor(c => c.Barrio, new { disabled = "disabled", style = "width:250px;", MaxLength = "50" })
                                        </td>
                                    </tr>
                                    <tr>
                                        <td align="left">
                                            <b>Nro:</b>
                                        </td>
                                        <td align="left" valign="middle">
                                            @Html.TextBoxFor(c => c.Nro, new { disabled = "disabled", style = "width:150px;", MaxLength = "50" })
                                        </td>
                                    </tr>
                                    <tr>
                                        <td align="left">
                                            <b>Depto:</b>
                                        </td>
                                        <td align="left" valign="middle">
                                            @Html.TextBoxFor(c => c.Depto, new { disabled = "disabled", style = "width:150px;", MaxLength = "50" })
                                        </td>
                                    </tr>
                                    <tr>
                                        <td align="left">
                                            <b>Nro Resolución:</b>
                                        </td>
                                        <td align="left" valign="middle">
                                            @Html.TextBoxFor(c => c.Nro_Resolucion, new { disabled = "disabled", style = "width:250px;", MaxLength = "50" })
                                        </td>
                                    </tr>
                                    <tr>
                                        <td align="left">
                                            <b>Nro Expediente:</b>
                                        </td>
                                        <td align="left" valign="middle">
                                            @Html.TextBoxFor(c => c.Nro_Expediente, new { disabled = "disabled", style = "width:250px;", MaxLength = "50" })
                                        </td>
                                    </tr>
                                </table>
                            </fieldset>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <fieldset style="font-family: Arial, Helvetica, sans-serif; font-size: 12px; width: 700px;">
                                <legend style="color: #FF9900"><b>Cursos de la Institución</b></legend>
                                <table>
                                    <tr>
                                        <td>
                                            @Html.Partial("_CondicionCursoLista", Model)
                                        </td>
                                    </tr>
                                </table>
                            </fieldset>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <fieldset style="font-family: Arial, Helvetica, sans-serif; font-size: 12px; width: 700px;">
                                <legend style="color: #FF9900"><b>Sedes de la Institución</b></legend>
                                <table>
                                    <tr>
                                        <td>@Html.Partial("_EstablecimientoLista", Model)
                                        </td>
                                    </tr>
                                </table>
                            </fieldset>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <fieldset style="font-family: Arial, Helvetica, sans-serif; font-size: 12px; width: 700px;">
                                <legend style="color: #FF9900"><b>Caja Chica</b></legend>
                                <table>
                                    <tr>
                                        <td>
                                            @Html.Partial("_CajaChicaLista", Model)
                                        </td>
                                    </tr>
                                </table>
                            </fieldset>
                        </td>
                    </tr>
                    <tr>
                        <td align="right" height="45px">
                            <br />
                            @Html.ActionLink("Volver al Listado", "Index", "Instituciones", null, new { @class = "btnIngresar" })&nbsp;
                        </td>
                    </tr>
                </table>
                @Html.HiddenFor(d => d.Id_Institucion)
            </td>
        </tr>
    </table>
</div>
