@model  InstitucionVista
@{
    ViewBag.Title = "Modificar Institucion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("Modificar_Institucion", "Instituciones", FormMethod.Post, new { Id = "FormularioInstituciones" }))
{ 
    <div id="titulo">
        <div id="ttxt">
            Instituciones -- Modificar</div>
    </div>
  
    <table align="center">
        <tr>
            <td>
                Nombre
            </td>
            <td>
                @Html.TextBoxFor(c => c.N_INSTITUCION, new { style = "width:200px;", MaxLength = "50" })
            </td>
        </tr>
        <tr>
            <td>
                Propia
            </td>
            <td>
                @Html.CheckBoxFor(c => c.INS_PROPIA)
            </td>
        </tr>
    </table>
    
    @Html.Partial("_Domicilios", Model.ListaDomicilios)
    <table>
        <tr>
            <td>
                Provincia
            </td>
            <td>
                @Html.TextBoxFor(c => c.domicilios.Provincia, new { style = "width:200px;", MaxLength = "64", Class = "asd", Id = "Provincia" })
            </td>
        </tr>
        <tr>
            <td>
                Localidad
            </td>
            <td>
                @Html.TextBoxFor(c => c.domicilios.Localidad, new { style = "width:200px;", MaxLength = "64", Class = "asd", Id = "Localidad" })
            </td>
        </tr>
        <tr>
            <td>
                Barrio
            </td>
            <td>
                @Html.TextBoxFor(c => c.domicilios.Barrio, new { style = "width:200px;", MaxLength = "64", Class = "asd", Id = "Barrio" })
            </td>
        </tr>
        <tr>
            <td>
                Calle
            </td>
            <td>
                @Html.TextBoxFor(c => c.domicilios.Calle, new { style = "width:200px;", MaxLength = "64", Class = "asd", Id = "Calle" })
            </td>
        </tr>
        <tr>
            <td>
                Nro
            </td>
            <td>
                @Html.TextBoxFor(c => c.domicilios.Nro, new { style = "width:200px;", MaxLength = "64", Class = "asd", Id = "Nro" })
            </td>
        </tr>
    </table>
    
    @Html.HiddenFor(d => d.ID_DOMICILIO)
    @Html.HiddenFor(d => d.ID_INSTITUCION)
    <p>
        <input type="submit" value="Guargar" />
        @Html.ActionLink("Cancelar", "Index", "Instituciones")
    </p>
}
<script type="text/javascript">
    $(document).ready(function () {




    });
</script>
