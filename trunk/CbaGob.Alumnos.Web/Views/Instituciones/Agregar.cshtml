@model  InstitucionVista
@{
    ViewBag.Title = "SGC - Gobierno de Córdoba - Instituciones";
    Layout = "~/Views/Shared/_MasterSGC.cshtml";
}
@section Scripts{
    @Content.Script("CbaGob.Alumnos.Instituciones.js",Url)
}
@using (Html.BeginForm("Agregar_Institucion", "Instituciones", FormMethod.Post, new { Id = "FormularioInstituciones" }))
{ 
    <div id="titulo">
        <div id="ttxt">
            Nueva Institucion</div>
    </div>
    <table align="center" id="mytable" style="font-family: Arial, Helvetica, sans-serif;
        font-size: 12px; width: 750px;">
        <tr>
            <td>
                <fieldset style="font-family: Arial, Helvetica, sans-serif; font-size: 12px; width: 750px;
                    text-align: center;">
                    <legend>Institucion</legend>
                    <table align="center" id="mytable" style="font-family: Arial, Helvetica, sans-serif;
                        font-size: 12px; width: 750px;">
                        <tr>
                            <td>
                                Nombre
                            </td>
                            <td align="left" valign="middle">
                                @Html.TextBoxFor(c => c.N_INSTITUCION, new { style = "width:400px;", MaxLength = "50" })
                                @Html.ValidationMessageFor(m => m.N_INSTITUCION)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Propia
                            </td>
                            <td align="left" valign="middle">
                                @Html.CheckBoxFor(c => c.INS_PROPIA)
                            </td>
                        </tr>
                    </table>
                </fieldset>
            </td>
        </tr>
    </table>
    
    @Html.Partial("_Domicilios", Model.ListaDomicilios)
    <table align="center" id="mytable" style="font-family: Arial, Helvetica, sans-serif;
        font-size: 12px; width: 750px;">
        <tr>
            <td>
                <fieldset style="font-family: Arial, Helvetica, sans-serif; font-size: 12px; width: 750px;
                    text-align: center;">
                    <legend>Domicilio</legend>
                    <table align="center" style="font-family: Arial, Helvetica, sans-serif; font-size: 12px;
                        width: 750px;">
                        <tr>
                            <td>
                                Provincia
                            </td>
                            <td align="left" valign="middle">
                                <input id="Provincia" disabled style="width: 200px;" />
                                @Html.ValidationMessageFor(m => m.ID_DOMICILIO)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Localidad
                            </td>
                            <td align="left" valign="middle">
                                <input id="Localidad" disabled style="width: 350px;" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Barrio
                            </td>
                            <td align="left" valign="middle">
                                <input id="Barrio" disabled style="width: 350px;" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Calle
                            </td>
                            <td align="left" valign="middle">
                                <input id="Calle" disabled style="width: 350px;" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Nro
                            </td>
                            <td align="left" valign="middle">
                                <input id="Nro" disabled style="width: 60px;" />
                            </td>
                        </tr>
                    </table>
                </fieldset>
            </td>
        </tr>
    </table>
    
  
    
    @Html.HiddenFor(d => d.ID_DOMICILIO)
    <table id="myIntituciones" align="center" width="800px">
        <tr>
            <td align="right" valign="middle">
                <input type="submit" value="Guargar" class="boton" />&nbsp;&nbsp;
                @Html.ActionLink("Cancelar", "Index", "Instituciones", null, new { Class = "btnIngresar" })
            </td>
        </tr>
    </table>
   
}<br /><br /><br /><br /><br />
