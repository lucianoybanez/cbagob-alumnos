@model  InstitucionVista
@{
    ViewBag.Title = "Agregar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("Agregar_Institucion", "Instituciones", FormMethod.Post, new { Id = "FormularioInstituciones" }))
{ 
    <div id="titulo">
        <div id="ttxt">
            Instituciones -- Nuevo</div>
    </div>
    <table align="center" width="400px">
        <tr>
            <td>
                Nombre
            </td>
            <td>
                @Html.TextBoxFor(c => c.N_INSTITUCION, new { style = "width:200px;", MaxLength = "50" })
            </td>
        </tr>
        <tr>
            <td>
                Propia
            </td>
            <td>
                @Html.CheckBoxFor(c => c.INS_PROPIA)
            </td>
        </tr>
    </table>
    
    @Html.Partial("_Domicilios", Model.ListaDomicilios)

    <table>
        <tr>
            <td>
                Provincia
            </td>
            <td>
                <input id="Provincia" style="width: 200px;" />
            </td>
        </tr>
        <tr>
            <td>
                Localidad
            </td>
            <td>
                <input id="Localidad" style="width: 200px;" />
            </td>
        </tr>
        <tr>
            <td>
                Barrio
            </td>
            <td>
                <input id="Barrio" style="width: 200px;" />
            </td>
        </tr>
        <tr>
            <td>
                Calle
            </td>
            <td>
                <input id="Calle" style="width: 200px;" />
            </td>
        </tr>
        <tr>
            <td>
                Nro
            </td>
            <td>
                <input id="Nro" style="width: 200px;" />
            </td>
        </tr>
    </table>
    
    @Html.HiddenFor(d => d.ID_DOMICILIO)
    <p>
        <input type="submit" value="Guargar" />
        @Html.ActionLink("Cancelar", "Index", "Instituciones")
    </p>
}
<script type="text/javascript">
    $(document).ready(function () {


    });
</script>
