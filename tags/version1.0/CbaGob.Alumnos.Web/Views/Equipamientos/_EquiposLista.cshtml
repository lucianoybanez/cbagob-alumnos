@model EquiposVista
@if (Model.ListaEquipos != null && Model.ListaEquipos.Count > 0)
{ 
    <div style="text-align: center;">
        <table id="grilla" align="center" width="722px" cellpadding="0" cellspacing="0">
            <thead>
                <tr>
                    <th height="30">
                        <div align="left">
                            Nombre del Equipo</div>
                    </th>
                    <th height="30" width="180">
                        <div align="center">
                            Estado del Equipo</div>
                    </th>
                    <th height="30" align="center" width="150">
                        <div align="right" style="margin-right: 2px;">
                            Acción</div>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ListaEquipos)
                {
                    <tr>
                        <td align="left" height="28">
                            @if (item.N_Equipos.Length < 30)
                            {
                                @item.N_Equipos
                            }
                            else
                            {
                                @(item.N_Equipos.ToString().Substring(1, 29) + " ...")
                            }
                        </td>
                        <td align="center" width="50">
                            @if (item.NombreEstadoEquipo.Length < 30)
                             {
                                @item.NombreEstadoEquipo
                             }
                             else
                             {
                                @(item.NombreEstadoEquipo.ToString().Substring(1, 29) + " ...")
                             }
                        </td>
                        <td align="right" style="margin-right: 2px;">
                            @Html.ActionLink("Modificar", "Modificar", "Equipamientos", new { id_equipo = item.Id_Equipo }, new { @class = "btnIngresar" })
                            @Html.ActionLink("Eliminar", "Eliminar", "Equipamientos", new { id_equipo = item.Id_Equipo }, new { @class = "btnIngresar" })
                        </td>
                    </tr>
                }
                <tr>
                    <td align="left" valign="middle" colspan="2" height="20">
                        <div id="resumenPag" style="height: 20px; padding: 10px 5px 0 2px;">
                            <div align="center">
                                @*    <ul id="pagination-clean">
                                    <li class="previous-off">Ant</li>
                                    <li class="active">1</li>
                                    <li><a href="?page=2">2</a></li>
                                    <li><a href="?page=3">3</a></li>
                                    <li><a href="?page=4">4</a></li>
                                    <li><a href="?page=5">5</a></li>
                                    <li><a href="?page=6">6</a></li>
                                    <li><a href="?page=7">7</a></li>
                                    <li class="next"><a href="?page=2">Sig</a></li>
                                </ul>*@
                            </div>
                        </div>
                    </td>
                    <td align="right" valign="bottom" colspan="2" height="20">
                        <div style="height: 20px; padding: 15px 5px 0 2px;">
                            @Html.ActionLink("Agregar Equipo", "Agregar", "Equipamientos", new { @class = "btnIngresar" })
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
}
else
{
    <table id="grilla" align="center" width="722px" cellpadding="0" cellspacing="0">
        <tr>
            <td width="722px">
                @Html.Partial("_SinDatos", "Equipos")
            </td>
        </tr>
        <tr>
            <td>
                <div align="right" style="height: 20px; padding: 15px 5px 0 2px;">
                    @Html.ActionLink("Agregar Equipo", "Agregar", "Superviciones", new { @class = "btnIngresar" })
                </div>
            </td>
        </tr>
    </table>
}
