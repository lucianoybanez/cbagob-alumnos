@model IList<IExamen>
@if (Model != null && Model.Count > 0)
{ 
    <div style="text-align: center; padding:2px;">
        <table id="grilla" align="center" width="700px" cellpadding="0" cellspacing="0">
            <thead>
                <tr>
                    <th>
                        <div align="center">
                            Fecha Examen</div>
                    </th>
                    <th>
                        <div align="center">
                            Numero de Examen</div>
                    </th>
                    <th>
                        <div align="center">
                            Nota</div>
                    </th>                   
                    <th height="30">
                        <div align="center">
                            Accion</div>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td height="30">                           
                             @item.FechaExamen.ToFecha()
                        </td>
                        <td>
                         Examen Nº @item.NroExamen
                        </td>
                        <td>
                            @item.Nota
                        </td>                       
                        <td>
                            @Html.ActionLink("Modificar", "Modificar", "Examenes", new { IdExamen = item.IdExamen }, new { @class = "btnIngresar" })&nbsp;&nbsp;&nbsp;&nbsp;
                            @Html.ActionLink("Eliminar", "Eliminar", "Examenes", new { IdExamen = item.IdExamen }, new { @class = "btnIngresar" })&nbsp;&nbsp;&nbsp;&nbsp;
                        </td>
                    </tr>
                }              
            </tbody>
        </table>
    </div>
}
else
{
    @Html.Partial("_SinDatos", "Examenes")
}
