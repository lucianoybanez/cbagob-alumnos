@model SupervicionVista
@{
    ViewBag.Title = "Superviciones";
    ViewBag.SubMenuSelected = "Superviciones";
    Layout = "~/Views/Shared/_MasterSGC.cshtml";
}
@section Scripts{
    @Content.Script("CbaGob.Alumnos.Superviciones.js", Url)
}
<div class="box">
    <h2>
        Modificar Supervición</h2>
    <table align="center" style="width: 700px;">
        <tr>
            <td class="style1" style="font-weight: bold">
                <div id="titulo">
                </div>
                @using (Html.BeginForm("Modificar_Supervicion", "Superviciones", FormMethod.Post, new { Id = "FormularioSuperviciones" }))
                { 
                    <fieldset style="font-family: Arial, Helvetica, sans-serif; font-size: 12px; width: 700px;">
                        <legend>Datos de la Supervición:</legend>
                        <table align="center" style="font-family: Arial, Helvetica, sans-serif; font-size: 12px;
                            width: 700px;">
                            <tr>
                                <td>
                                    <table align="left" style="font-family: Arial, Helvetica, sans-serif; font-size: 12px;
                                        width: 700px;">
                                        <tr>
                                            <td align="left">
                                                <b>Nombre Institución:</b>
                                            </td>
                                            <td align="left">
                                                @Html.TextBoxFor(c => c.Grupo.Nombre_Institucion, new { disabled = "disabled", style = "width:200px;", MaxLength = "50" })
                                            </td>
                                        </tr>
                                        <tr>
                                            <td align="left">
                                                <b>Nombre Curso:</b>
                                            </td>
                                            <td align="left">
                                                @Html.TextBoxFor(c => c.Grupo.Nombre_Curso, new { disabled = "disabled", style = "width:200px;", MaxLength = "50" })
                                            </td>
                                        </tr>
                                        <tr>
                                            <td align="left">
                                                <b>Nombre Grupo:</b>
                                            </td>
                                            <td align="left">
                                                @Html.TextBoxFor(c => c.Grupo.NombreGrupo, new { disabled = "disabled", style = "width:200px;", MaxLength = "50" })
                                                @Html.ActionLink("Cambiar estos datos", "VerGrupos", "Superviciones", new { idCondicionCurso = Model.Grupo.Id_Condicion_Curso, IdInstitucion = Model.Grupo.Id_Institucion }, new { Class = "btnIngresar" })
                                            </td>
                                        </tr>
                                        <tr>
                                            <td align="left">
                                                <b>Buscador Supervisor:</b>
                                            </td>
                                            <td align="left">
                                                @Html.EditorFor(c => c.supervisor)
                                            </td>
                                        </tr>
                                        <tr>
                                            <td align="left">
                                                <b>Fecha de Supervición:</b>
                                            </td>
                                            <td align="left">
                                                @*@Html.TextBoxFor(c => c.Fec_Supervision, new { Id = "fecSup", style = "width:90px;", MaxLength = "50" })*@
                                                @Html.EditorFor(c => c.Fec_Supervision)
                                            </td>
                                        </tr>
                                        <tr>
                                            <td align="left">
                                                <b>Hora de Supervición:</b>
                                            </td>
                                            <td align="left">
                                                <select id="selectedhora">
                                                    <option>Hora</option>
                                                    @for (int i = 1; i < 25; i++)
                                                    {
                                                        <option @i>@i</option>
                                                    }
                                                </select>
                                                :
                                                <select id="selectedminuto">
                                                    <option>Minuto</option>
                                                    @for (int i = 1; i < 60; i++)
                                                    {
                                                        <option value = @i >@i </option>
                                                    }
                                                </select>
                                                @Html.ValidationMessageFor(m => m.hora, "*")
                                                @Html.ValidationMessageFor(m => m.minuto, "*")
                                            </td>
                                        </tr>
                                        <tr>
                                            <td align="left">
                                                <b>Observación:</b>
                                            </td>
                                            <td align="left">
                                                @Html.TextAreaFor(c => c.Observaciones, new { style = "width:300px;height:50px;", MaxLength = "3999" })
                                            </td>
                                        </tr>
                                        <tr>
                                            <td align="left">
                                                <b>Nro Resolución:</b>
                                            </td>
                                            <td align="left">
                                                @Html.TextBoxFor(c => c.Nro_resolucion, new { style = "width:150px;", MaxLength = "64", Class = "asd" })
                                                @Html.ValidationMessageFor(m => m.Nro_resolucion, "*")
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                            </tr>
                        </table>
                    </fieldset>
                    @Html.HiddenFor(c => c.Id_Supervisor)
                    @Html.HiddenFor(c => c.Id_Grupo)
                    @Html.HiddenFor(c => c.hora)
                    @Html.HiddenFor(c => c.minuto)
                    @Html.HiddenFor(c => c.Id_Supervision)
                    <table id="btnfin" align="center" width="700px">
                        <tr>
                            <td align="right" valign="middle">
                                <input type="submit" value="Guardar" class="btnIngresar" />&nbsp;&nbsp;
                                @Html.ActionLink("Cancelar", "Index", "Superviciones", null, new { Class = "btnIngresar" })
                            </td>
                        </tr>
                    </table>
   
                }
            </td>
        </tr>
    </table>
</div>
