@model CbaGob.Alumnos.Web.Models.LogOnModel
@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
@section Stylesheets{
    @Content.Stylesheet("MVCFramework.css", Url)
}
@section Scripts{
    @Content.Script("CbaGob.Alumnos.LogIn.js",Url)
}
<div id="contenido">


@using (Html.BeginForm("Logon", "Account", FormMethod.Post, new { id = "login" }))
{
      <h1>Ingresar al Sistema</h1>
            <div>
                <label for="login_username">
                    Usuario:</label>
                      @Html.TextBoxFor(c=> c.UserName,new { @class="field required"})
                       @Html.ValidationMessageFor(c=> c.UserName,"*")

            </div>
            <div>
                <label for="login_password">Password:</label>
                  @Html.PasswordFor(c=> c.Password,new { @class="field required"})
                  @Html.ValidationMessageFor(c=> c.Password,"*")
            </div>
            <p>
            @Html.ValidationSummary(true)   
            </p>
                   
           
            <div class="submit">  
           
            <a href="javascript: document.forms['login'].submit();" class="btnIngresar">Ingresar</a>  
            </div>
           
}   

</div>








