@model CursosVista
@{
    ViewBag.Title = "Instituciones";
    ViewBag.SubMenuSelected = "Cursos";
    Layout = "~/Views/Shared/_MasterSGC.cshtml";
}
@section Scripts{
    @Content.Script("CbaGob.Alumnos.Cursos.js", Url)
}
<div class="box">
    <h2>
        Modificar Curso</h2>
    <table align="center" style="width: 700px;">
        <tr>
            <td class="style1" style="font-weight: bold">
                <div id="titulo">
                </div>
                @using (Html.BeginForm("Modificar_Cursos", "Cursos", FormMethod.Post, new { Id = "FormularioCursos" }))
                { 
                    @Html.ValidationSummary(true)
                    <br />
                    <table align="center" id="mytable" style="font-family: Arial, Helvetica, sans-serif;
                        font-size: 12px; width: 750px;">
                        <tr>
                            <td>
                                <fieldset style="font-family: Arial, Helvetica, sans-serif; font-size: 12px; width: 690px;
                                    text-align: center;">
                                    <legend>Datos Curso</legend>
                                    <table align="center" id="mytable" style="font-family: Arial, Helvetica, sans-serif;
                                        font-size: 12px; width: 690px;">
                                        <tr>
                                            <td align="left">
                                                <b>Nombre del Curso:</b>
                                            </td>
                                            <td align="left">
                                                @Html.TextBoxFor(c => c.N_CURSO, new { style = "width:200px;", MaxLength = "50", Class = "asd" })
                                                @Html.ValidationMessageFor(m => m.N_CURSO, "*")
                                            </td>
                                        </tr>
                                        <tr>
                                            <td align="left">
                                                <b>Area tipo Curso:</b>
                                            </td>
                                            <td align="left">
                                                @Html.EditorFor(c => c.AreasTipoCursos)
                                                @Html.ValidationMessageFor(m => m.Id_Area_Tipo_Curso, "*")
                                            </td>
                                        </tr>
                                        <tr>
                                            <td align="left">
                                                <b>Nro Resolucion:</b>
                                            </td>
                                            <td align="left">
                                                @Html.TextBoxFor(c => c.NRORESOLUCION, new { style = "width:200px;", MaxLength = "50", Class = "asd" })
                                                @Html.ValidationMessageFor(m => m.NRORESOLUCION, "*")
                                            </td>
                                        </tr>
                                    </table>
                                </fieldset>
                            </td>
                        </tr>
                    </table>
                    @Html.HiddenFor(d => d.ID_CURSO)
     
                    <table id="myIntituciones" align="center" width="690px">
                        <tr>
                            <td align="right" vlign="middle">
                                <input type="submit" value="Guargar" class="btnIngresar" />&nbsp;&nbsp;
                                @Html.ActionLink("Cancelar", "Index", "Cursos", null, new { Class = "btnIngresar" })
                            </td>
                        </tr>
                    </table>
                }
            </td>
        </tr>
    </table>
</div>
