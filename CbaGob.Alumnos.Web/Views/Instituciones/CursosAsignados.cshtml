@model CondicionesCursoVista
@{
    ViewBag.Title = "Instituciones";
    ViewBag.SubMenuSelected = "Instituciones";
    Layout = "~/Views/Shared/_MasterSGC.cshtml";
}
@section Stylesheets {
    @Content.Stylesheet("css/instituciones.css", Url)
}
@section Scripts{
    @Content.Script("CbaGob.Alumnos.Instituciones.js",Url)
}


<div class="box">
  <h2>Asignar Cursos </h2>
    <table id="grilla" align="center" style="width: 700px;">
        <tr>
            <td class="style1" style="font-weight: bold">
                <div id="titulo">
                </div> 
@if (Model.CondicionesCursos != null && Model.CondicionesCursos.Count > 0)
{ 
    <div style="text-align: center;">
        <table id="grilla" align="center" width="722px"  cellpadding="0" cellspacing="0">
            <thead>
                <tr>
                    <th height="30">
                        <div align="center">
                            Curso</div>
                    </th>
                     <th height="30">
                        <div align="center">
                            Modalidad</div>
                    </th>
                    <th height="30">
                        <div align="center">
                            Nivel</div>
                    </th>
                     <th height="30">
                        <div align="center">
                            Programa
                        </div>
                    </th>
                     <th height="30" colspan="2">
                        <div align="center">
                            Accion
                        </div>
                    </th>                    
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.CondicionesCursos)
                {
                    <tr>
                        <td align="left" height="28">
                           @item.NombreCurso
                        </td> 
                         <td align="left" height="28">
                            @item.NombreModalidad
                        </td>
                        <td align="left" height="28">
                            @item.NombreNivel
                        </td>
                        <td align="left" height="28">
                            @item.NombrePrograma
                        </td>                         
                         <td>
                             @Html.ActionLink("Modificar", "ModificarCondicionCurso", "CondicionesCurso", new { idCondicionCurso = item.IdCondicionCurso }, new { @class = "btnIngresar" })                           
                         </td>
                         <td>
                             @Html.ActionLink("Eliminar", "EliminarCondicionCurso", "CondicionesCurso", new { idCondicionCurso = item.IdCondicionCurso, IdInstitucion = item.IdInstitucion }, new { @class = "btnIngresar" })
                         </td>
                    </tr>
                }
                <tr>
                        <td align="left" valign="middle" colspan="2" height="20">
                            <div id="resumenPag" style="height:20px; padding:10px 5px 0 2px;">
                              <div align="center">
                                <ul id="pagination-clean">
                                  <li class="previous-off">Ant</li>
                                  <li class="active">1</li>
                                  <li><a href="?page=2">2</a></li>
                                  <li><a href="?page=3">3</a></li>
                                  <li><a href="?page=4">4</a></li>
                                  <li><a href="?page=5">5</a></li>
                                  <li><a href="?page=6">6</a></li>
                                  <li><a href="?page=7">7</a></li>
                                  <li class="next"><a href="?page=2">Sig</a></li>
                                </ul>
                              </div>
                         </div>
                        </td> 
                        <td align="right" valign="bottom" colspan="5" height="20">
                         <div style="height:20px; padding:15px 5px 0 2px;">
                            @Html.ActionLink("Agregar Curso", "AgregarCondicionCurso", "CondicionesCurso", new { idInstitucion = Model.IdInstitucion }, new { @class = "btnIngresar" })  
                         </div>
                        </td> 
                    </tr>
            </tbody>
        </table>
    </div>
}
else
{
    @Html.Partial("_SinDatos", "condiciones de cursos Asignados a instituciones")
}

</td>
        </tr>
    </table>
</div>                         