                                                @Html.ValidationMessageFor(m => m.Barrio)
                                            </td>
                                        </tr>
                                        <tr>
                                            <td align="left">
                                                <b>Nro:</b>
                                            </td>
                                            <td align="left" valign="middle">
                                                @Html.TextBoxFor(c => c.Nro, new { style = "width:150px;", MaxLength = "50" })
                                                @Html.ValidationMessageFor(m => m.Nro)
                                            </td>
                                        </tr>
                                        <tr>
                                            <td align="left">
                                                <b>Depto:</b>
                                            </td>
                                            <td align="left" valign="middle">
                                                @Html.TextBoxFor(c => c.Depto, new { style = "width:150px;", MaxLength = "50" })
                                                @Html.ValidationMessageFor(m => m.Depto)
                                            </td>
                                        </tr>
                                        <tr>
                                            <td align="left">
                                                <b>Nro Resolucion:</b>
                                            </td>
                                            <td align="left" valign="middle">
                                                @Html.TextBoxFor(c => c.Nro_Resolucion, new { style = "width:250px;", MaxLength = "50" })
                                                @Html.ValidationMessageFor(m => m.Nro_Resolucion)
