@model IList<IInstitucion>

@if (Model != null && Model.Count > 0)
{ 
    <div style="text-align: center;">
       <table id="grilla" align="center" width="722px"  cellpadding="0" cellspacing="0">
            <thead>
                <tr>
                    <th height="30" width="300">
                        <div align="center">
                            NOMBRE DE LA INSTITUCION</div>
                    </th>
                    <th height="30" width="40">
                        <div align="center">
                            PROPIA</div>
                    </th>
                     <th height="30" width="80">
                        <div align="center">
                            FECHA ALTA</div>
                    </th>
                    <th height="30" width="200">
                        <div align="center">
                        ACCION</div>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td align="left" height="28">
                            @item.N_INSTITUCION
                        </td>
                        <td>
                            @item.INS_PROPIA
                        </td>
                         <td>
                           @item.FechaAlta.ToShortDateString()
                        </td>
                        <td>
                            @Html.ActionLink("Modificar", "Modificar", "Instituciones", new { INST_ID = item.ID_INSTITUCION }, new { @class = "btnIngresar" })&nbsp;&nbsp;&nbsp;&nbsp;
                            @Html.ActionLink("Eliminar", "Eliminar", "Instituciones", new { INST_ID = item.ID_INSTITUCION }, new { @class = "btnIngresar" })&nbsp;&nbsp;&nbsp;&nbsp;
                            @Html.ActionLink("Detalle", "Index", "CondicionesCurso", null , new { @class = "btnIngresar" })
                        </td>
                    </tr>
                }
               
                   

                   
                    <tr>
                        <td align="left" valign="middle" colspan="2" height="20">
                            <div id="resumenPag" style="height:20px; padding:10px 5px 0 2px;">
                              <div align="center">
                                <ul id="pagination-clean">
                                  <li class="previous-off">Ant</li>
                                  <li class="active">1</li>
                                  <li><a href="?page=2">2</a></li>
                                  <li><a href="?page=3">3</a></li>
                                  <li><a href="?page=4">4</a></li>
                                  <li><a href="?page=5">5</a></li>
                                  <li><a href="?page=6">6</a></li>
                                  <li><a href="?page=7">7</a></li>
                                  <li class="next"><a href="?page=2">Sig</a></li>
                                </ul>
                              </div>
                         </div>
                        </td> 
                        <td align="right" valign="bottom" colspan="2" height="20">
                         <div style="height:20px; padding:15px 5px 0 2px;">
                            @Html.ActionLink("Agregar Institucion", "Agregar", "Instituciones", new { @class = "btnIngresar" })
                         </div>
                        </td> 
                    </tr>
            </tbody>
        </table>
    </div>
}
else
{
    @Html.Partial("_SinDatos", "instituciones")
}
<br />
   
   
