@model GrupoVista
@if (Model.HorariosAsignadoGrupo.ListaHorario != null && Model.HorariosAsignadoGrupo.ListaHorario.Count > 0)
{ 
    <div id="grilla" style="text-align: center;">
        <table class="TablaPersonal" align="center" width="665px" cellpadding="0" cellspacing="0">
            <thead>
                <tr>
                    <th height="30" width="180px">
                        <div align="left">
                            Dia</div>
                    </th>
                    <th height="30" width="180px">
                        <div align="center">
                            Hora Inicio</div>
                    </th>
                    <th height="30">
                        <div align="center">
                            Hora Fin</div>
                    </th>
                    <th height="30">
                        <div align="center">
                            Año</div>
                    </th>
                     <th height="30">
                        <div align="center">
                            Mes</div>
                    </th>
                    <th height="30">
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.HorariosAsignadoGrupo.ListaHorario)
                {
                    <tr>
                        <td align="left" height="30">
                            @item.Dia_Semana
                        </td>
                        <td height="30">
                            @item.Hora_Inicio
                        </td>
                        <td height="30">
                            @item.Hora_Fin
                        </td>
                        <td height="30">
                            @item.Año
                        </td>
                         <td height="30">
                            @item.Mes
                        </td>
                        <td height="30">
                            @Html.ActionLink("Sacar Horario", "SacarHorario", "Grupos", new { id_grupo = Model.Id_Grupo, id_horario = item.Id_Horario }, new { @class = "btnIngresar" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div id="tab" style="text-align: center;">
        <table align="center" width="665px" id="mytable">
            <thead>
                <tr>
                    <th height="30">
                        <div align="center">
                            SIN DATOS</div>
                    </th>
                </tr>
            </thead>
        </table>
    </div>
   
}
