@model GruposVista
@if (Model.ListaGrupos != null && Model.ListaGrupos.Count > 0)
{
    <div id="tab" style="text-align: center;  width:722px;">
         <table align="center" id="grilla"  width="722px"  cellpadding="0" cellspacing="0">
            <thead>
                <tr>
                    <th height="30">
                        <div align="center">
                            NOMBRE</div>
                    </th>
                    <th height="30">
                        <div align="center">
                            ESTABLECIMIENTO</div>
                    </th>
                    <th height="30">
                        <div align="center">
                            FECHA ALTA</div>
                    </th>
                    <th height="30">
                        <div align="center">
                            ACCION</div>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ListaGrupos)
                {
                    <tr>
                        <td align="left"  height="28">
                            @item.NombreGrupo
                        </td>
                        <td height="30">
                            @item.NombreEstablecimiento
                        </td>
                        <td height="30">
                            @item.FechaAlta.ToShortDateString()
                        </td>
                        <td height="30">
                            @Html.ActionLink("Modificar", "Modificar", "Grupos", new { id_grupo = item.Id_Grupo }, new { Class = "btnIngresar" })
                            @Html.ActionLink("Eliminar", "Eliminar", "Grupos", new { id_grupo = item.Id_Grupo }, new { Class = "btnIngresar" })
                        </td>
                    </tr>
                }
                <tr>
                        <td align="left" colspan="4">
                            &nbsp;
                        </td>
                        
                    </tr>
                    <tr>
                        <td align="left" valign="middle" colspan="3" height="20">
                            <div id="resumenPag" style="height:30px; padding:10px 5px 0 2px;">
                              <div align="center">
                                <ul id="pagination-clean">
                                  <li class="previous-off">Ant</li>
                                  <li class="active">1</li>
                                  <li><a href="?page=2">2</a></li>
                                  <li><a href="?page=3">3</a></li>
                                  <li><a href="?page=4">4</a></li>
                                  <li><a href="?page=5">5</a></li>
                                  <li><a href="?page=6">6</a></li>
                                  <li><a href="?page=7">7</a></li>
                                  <li class="next"><a href="?page=2">Sig</a></li>
                                </ul>
                              </div>
                         </div>
                        </td> 
                        <td align="right" valign="bottom" height="20">
                         <div id="resumenPag" style="height:30px; padding:15px 5px 0 2px;">
                            @Html.ActionLink("Agregar Grupo", "Agregar", "Grupos", null, new { Class = "btnIngresar" })
                         </div>
                        </td> 
                    </tr>
            </tbody>
        </table>
    </div>
}
else
{
    @Html.Partial("_SinDatos", "Grupos")
}

