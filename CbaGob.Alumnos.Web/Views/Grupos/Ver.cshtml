@model GrupoVista
@{
    ViewBag.Title = "SGC - Gobierno de Córdoba - Grupos";
    Layout = "~/Views/Shared/_MasterSGC.cshtml";
}
@section Scripts{
    @Content.Script("CbaGob.Alumnos.Grupos.js", Url)
}
<div class="box">
    <h2>
        Grupo</h2>
    <table align="center" style="width: 700px;">
        <tr>
            <td class="style1" style="font-weight: bold">
                <div id="titulo">
                </div>
                @using (Html.BeginForm("Eliminar_Grupo", "Grupos", FormMethod.Post, new { Id = "FormularioGrupos" }))
                { 
                    <fieldset style="font-family: Arial, Helvetica, sans-serif; font-size: 12px; width: 700px;">
                        <legend style="color: #FF9900"><b>Datos del Curso</b></legend>
                        <table>
                            <tr>
                                <td>
                                    <b>Nombre del Grupo:</b>
                                </td>
                                <td>
                                    @Html.TextBoxFor(c => c.NombreGrupo, new { disabled = "disabled", style = "width:200px;", MaxLength = "50", Class = "asd" })
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <b>Capacidad del Grupo:</b>
                                </td>
                                <td>
                                    @Html.TextBoxFor(c => c.Capacidad, new { disabled = "disabled", style = "width:50px;", MaxLength = "50", Class = "asd" })
                                </td>
                            </tr>
                        </table>
                    </fieldset>
                    <fieldset style="font-family: Arial, Helvetica, sans-serif; font-size: 12px; width: 700px;">
                        <legend style="color: #FF9900"><b>Alumnos inscriptos Sin Grupo</b></legend>
                        <table>
                            <tr>
                                <td>@Html.Partial("_AlumnosLista", Model)
                                </td>
                            </tr>
                        </table>
                    </fieldset>
                    <fieldset style="font-family: Arial, Helvetica, sans-serif; font-size: 12px; width: 700px;">
                        <legend style="color: #FF9900"><b>Alumnos inscriptos en el Grupo</b></legend>
                        <table>
                            <tr>
                                <td>@Html.Partial("_AlumnosEnGrupoLista", Model)
                                </td>
                            </tr>
                        </table>
                    </fieldset>
                    <table style="width: 700px;">
                        <tr>
                            <td align="right">
                                @Html.ActionLink("Volver al Listado de Instituciones", "Index", "Instituciones", null, new { @class = "btnIngresar" })
                            </td>
                        </tr>
                    </table>
                    @Html.HiddenFor(d => d.Id_Establecimiento)
                    @Html.HiddenFor(d => d.Id_Docente)
                    @Html.HiddenFor(d => d.Id_Grupo)
    
                }
            </td>
        </tr>
    </table>
</div>
<div id="dialog" title="Eliminar">
    <p>
        Esta Seguro de Eliminar?</p>
</div>
