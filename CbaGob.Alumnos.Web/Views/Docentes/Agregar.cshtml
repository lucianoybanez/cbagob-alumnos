@model  DocentesVista
@{
    ViewBag.Title = "SGC - Gobierno de Córdoba - Docentes";
    Layout = "~/Views/Shared/_MasterSGC.cshtml";
}
@section Scripts{
    @Content.Script("CbaGob.Alumnos.Docentes.js",Url)
}
<div class="box">
  <h2>Agregar Docente</h2>
    <table align="center" style="width: 700px;">
        <tr>
            <td class="style1" style="font-weight: bold">
                <div id="titulo">
                    
                </div> 
            
@using (Html.BeginForm("Agregar_Docente", "Docentes", FormMethod.Post, new { Id = "FormularioDocentes" }))
{ 
  
    <table cellpadding="0" cellspacing="0" align="center" style="font-family:Arial, Helvetica, sans-serif; font-size:12px; width:700px;">
        <tr>
            <td>
            <div id="tabs" style="width:700px;">
                <ul>
                    <li><a href="#tabs-1">Datos</a></li>
                    <li><a href="#tabs-2">Persona Juridica</a></li>
                    <li><a href="#tabs-3">Domicilio</a></li>
                </ul>
                <div id="tabs-1">
                <table style="font-family: Arial, Helvetica, sans-serif; font-size: 12px; width: 700px;">
                <tr>
                <td>
                <fieldset style="font-family: Arial, Helvetica, sans-serif; font-size: 12px; width: 660px; text-align: center;">
               <legend>Modalidad</legend>
                <table align="center" style="font-family:Arial, Helvetica, sans-serif; font-size:12px; width:660px;">
                <tr>
                    <td width="120" align="right" valign="middle">
                        <b>Modalidad:</b>
                    </td>
                    <td align="left" valign="middle">
                        @Html.TextBoxFor(c => c.N_Modalidad, new { style = "width:200px;", MaxLength = "64", Class = "asd" })
                        @Html.ValidationMessageFor(m => m.N_Modalidad)
                    </td>
                </tr>
                <tr>
                    <td width="120" align="right" valign="middle">
                        <b>Cargos:</b>
                    </td>
                    <td align="left" valign="middle">
                        @Html.EditorFor(c => c.cargos)
                        @Html.ValidationMessageFor(m => m.Id_Cargo)
                    </td>
                </tr>
                </table>

                </fieldset>
                </td>
                </tr>
                </table>
        </div>
        <div id="tabs-2">
            @Html.Partial("_PersonasJuridica", Model.ListaPersonaJuridica)
           <table align="center" style="font-family:Arial, Helvetica, sans-serif; font-size:12px; width:700px;">
                <tr>
                    <td width="260" align="right" valign="middle">
                        <b>Cuit:</b>
                    </td>
                    <td>
                        <input id="Cuit" disabled style="width: 200px;" />
                        @Html.ValidationMessageFor(m => m.Id_PersonaJuridica)
                    </td>
                </tr>
                <tr>
                    <td width="260" align="right" valign="middle">
                        <b>Razon Social:</b>
                    </td>
                    <td>
                        <input id="Razonsocial" disabled  style="width: 200px;" />
                    </td>
                </tr>
            </table>
        </div>
        <div id="tabs-3">
            @Html.Partial("_Domicilios", Model.ListaDomicilios)
            <table align="center" style="font-family:Arial, Helvetica, sans-serif; font-size:12px; width:700px;">
                <tr>
                    <td width="220" align="right" valign="middle">
                        <b>Provincia:</b>
                    </td>
                    <td>
                        <input id="Provincia" disabled style="width: 200px;" />
                        @Html.ValidationMessageFor(m => m.Id_Domicilio)
                    </td>
                </tr>
                <tr>
                    <td width="220" align="right" valign="middle">
                        <b>Localidad:</b>
                    </td>
                    <td>
                        <input id="Localidad" disabled style="width: 350px;" />
                    </td>
                </tr>
                <tr>
                    <td width="220" align="right" valign="middle">
                        Barrio
                    </td>
                    <td>
                        <input id="Barrio" disabled style="width: 350px;" />
                    </td>
                </tr>
                <tr>
                    <td width="220" align="right" valign="middle">
                        Calle
                    </td>
                    <td>
                        <input id="Calle" disabled style="width: 350px;" />
                    </td>
                </tr>
                <tr>
                    <td width="220" align="right" valign="middle">
                        Nro
                    </td>
                    <td>
                        <input id="Nro" disabled style="width: 60px;" />
                    </td>
                </tr>
            </table>
        </div>
    </div>
    </td>
        </tr>
    </table>  
    @Html.HiddenFor(d => d.Id_Domicilio)
    @Html.HiddenFor(d => d.Id_PersonaJuridica)
    
    <table id ="myIntituciones" align="center" width="700px">
        <tr>
            <td align="right" valign="middle">
                <input type="submit" value="Guargar" class="btnIngresar" />&nbsp;&nbsp;
        @Html.ActionLink("Cancelar", "Index", "Docentes", null, new { Class = "btnIngresar" })
            </td>
            
        </tr>
    </table>

}
 </td>
        </tr>
    </table>
</div>
