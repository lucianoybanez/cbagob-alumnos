@{
    Layout = null;
}
<div id="AlumnosDialog" title="Buscar Alumnos">
    @using (Ajax.BeginForm("BuscarAlumno", "Alumnos", new AjaxOptions() { HttpMethod = "GET", InsertionMode = InsertionMode.Replace, UpdateTargetId = "searchResults" }))
    {
        <table border="0" cellpadding="0" cellspacing="0">
            <tr>
                <td colspan="2">
                    <input type="radio" name="radio" checked="checked" id="radioNombre" />
                    Nombre:&nbsp;<input type="text" name="nombre" id="nombre" />
                    &nbsp; y &nbsp;Apellido:<input type="text" name="apellido" id="apellido" />
                </td>
            </tr>
            <tr>
                <td>
                    <input type="radio" name="radio" id="radioDni" />
                    DNI:
                </td>
                <td>
                    <input type="text" name="dni" id="dni" />
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <input type="submit" value="Buscar" />
                </td>
            </tr>
        </table>
    }
    <table id="searchResults">
    </table>
</div>
