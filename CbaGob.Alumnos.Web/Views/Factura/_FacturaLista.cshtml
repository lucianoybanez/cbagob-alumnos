@model  FacturasVista
@if (Model.Facturas != null && Model.Facturas.Count > 0)
{ 
    <div id="tab" style="text-align: center;">
        <table id="grilla" align="center" id="mytable" width="722px" cellpadding="0" cellspacing="0">
            <thead>
                <tr>
                    <th height="30">
                        <div align="center">
                            Numero de Factura</div>
                    </th>
                    <th height="30">
                        <div align="center">
                            Concepto</div>
                    </th>
                    <th height="30">
                        <div align="center">
                            Monto Total</div>
                    </th>
                    <th height="30">
                        <div align="center">
                            Accion</div>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Facturas)
                {
                    <tr>
                        <td align="left" height="30">
                            @item.NroFactura
                        </td>
                        <td>
                            @item.Concepto
                        </td>
                        <td>
                            @item.MontoTotal
                        </td>
                        <td>
                            @if (ViewBag.SubMenuSelected != "Liquidacion")
                            {
                                @Html.ActionLink("Eliminar", "Eliminar", "Factura", new { Idfactura = item.IdFactura }, new { @class = "btnIngresar" })
                            }
                            else
                            {
                                @Html.ActionLink("Liquidar Factura", "VerFactura", "Factura", new { Idfactura = item.IdFactura }, new { @class = "btnIngresar" })
                            }
                        </td>
                    </tr>
                }
                @if (ViewBag.SubMenuSelected != "Liquidacion")
                {
                    <tr>
                        <td align="right" valign="middle" colspan="4" height="20">
                            @Html.ActionLink("Agregar Factura", "Seleccion", "Factura", null, new { @class = "btnIngresar" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <table id="grilla" align="center" width="722px" cellpadding="0" cellspacing="0">
        <tr>
            <td width="722px">
                @Html.Partial("_SinDatos", "Facturas")
            </td>
        </tr>
        @if (ViewBag.SubMenuSelected != "Liquidacion")
        {
            <tr>
                <td align="right" width="722px">
                    @Html.ActionLink("Agregar Factura", "Seleccion", "Factura", null, new { @class = "btnIngresar" })
                </td>
            </tr>
        }
    </table>
    
}
