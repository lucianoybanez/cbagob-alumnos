@model CargosVista
@if (Model.ListaCargo != null && Model.ListaCargo.Count > 0)
{ 
    <div style="text-align: center;">
        <table id="grilla" align="center" width="722px" cellpadding="0" cellspacing="0">
            <thead>
                <tr>
                    <th height="30" width="260">
                        <div align="left">
                            Nombre del Cargo</div>
                    </th>
                    <th height="30" width="100">
                        <div align="center">
                            Número  Resolución</div>
                    </th>
                    <th height="30" width="200">
                        <div style="margin-right: 2px; text-align: right;">
                            Acción</div>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ListaCargo)
                {
                    <tr>
                        <td align="left" height="28">
                            @item.N_Cargo
                        </td>
                        <td>
                            @item.Nro_Resolucion
                        </td>
                        <td align="right" style="margin-right: 2px;">
                            @Html.ActionLink("Modificar", "Modificar", "Cargos", new { idcargo = item.Id_Cargo }, new { @class = "btnIngresar" })&nbsp;&nbsp;&nbsp;&nbsp;
                            @Html.ActionLink("Eliminar", "Eliminar", "Cargos", new { idcargo = item.Id_Cargo }, new { @class = "btnIngresar" })&nbsp;&nbsp;&nbsp;&nbsp;
                        </td>
                    </tr>
                }
                <tr>
                    <td align="left" valign="middle" colspan="2" height="20">
                        <div id="resumenPag" style="height: 20px; padding: 10px 5px 0 2px;">
                        </div>
                    </td>
                    <td align="right" valign="bottom" colspan="2" height="20">
                        <div style="height: 20px; padding: 15px 5px 0 2px;">
                            @Html.ActionLink("Agregar Cargo", "Agregar", "Cargos", new { @class = "btnIngresar" })
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
}
else
{
    
    <table id="grilla" align="center" width="722px" cellpadding="0" cellspacing="0">
        <tr>
            <td width="722px">
                @Html.Partial("_SinDatos", "Cargos")
            </td>
        </tr>
        <tr>
            <td>
                <div align="right" style="height: 20px; padding: 15px 5px 0 2px;">
                    @Html.ActionLink("Agregar Cargo", "Agregar", "Cargos", new { @class = "btnIngresar" })
                </div>
            </td>
        </tr>
    </table>
}
<br />
