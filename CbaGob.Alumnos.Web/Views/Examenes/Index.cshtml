@model ExamenesVista
@{
    ViewBag.Title = "SGC - Gobierno de Córdoba - Inscripciones";
    Layout = "~/Views/Shared/_MasterSGC.cshtml";
}
@section Stylesheets {
    @Content.Stylesheet("css/instituciones.css", Url)
}
@section Scripts{
    @Content.Script("CbaGob.Alumnos.Examenes.js", Url)
}
<div class="box">
    <h2>
        Listado de Exámenes</h2>
    <table>
        <tr>
            <td class="style1" style="font-weight: bold">
                <div id="titulo">
                @Html.ValidationSummary()
                </div>
                <div id="DivExamenes">
                    @if (Model.Examens != null && Model.Examens.Count > 0)
                    { 
                        <div style="text-align: center;">
                            <table id="grilla" align="center" width="722px" cellpadding="0" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>
                                            <div align="center">
                                                Nombre del Grupo</div>
                                        </th>
                                        <th>
                                            <div align="center">
                                                Nombre del Alumno</div>
                                        </th>
                                        <th>
                                            <div align="center">
                                                Numero de Examen</div>
                                        </th>
                                        <th>
                                            <div align="center">
                                                Nota</div>
                                        </th>
                                        <th height="30">
                                            <div align="center">
                                                ACCION</div>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Examens)
                                    {
                                        <tr>
                                            <td height="30">
                                                @item.NombreGrupo
                                            </td>
                                            <td>
                                                @item.NombreAlumno
                                            </td>
                                            <td>
                                                @item.NroExamen
                                            </td>
                                            <td>
                                                @item.Nota
                                            </td>
                                            <td>
                                                @Html.ActionLink("Modificar", "Modificar", "Examenes", new { IdExamen = item.IdExamen }, new { @class = "btnIngresar" })&nbsp;&nbsp;&nbsp;&nbsp;
                                                @Html.ActionLink("Eliminar", "Eliminar", "Examenes", new { IdExamen = item.IdExamen }, new { @class = "btnIngresar" })&nbsp;&nbsp;&nbsp;&nbsp;
                                            </td>
                                        </tr>
                                    }
                                    <tr>
                                        <td align="left" valign="middle" colspan="2" height="20">
                                            @Html.Partial("_Paginacion")
                                        </td>
                                        <td align="right" valign="bottom" colspan="2" height="20">
                                            <div style="height: 20px; padding: 15px 5px 0 2px;">
                                                @Html.ActionLink("Agregar Examen", "Agregar", "Examenes", null, new { @class = "btnIngresar" })
                                            </div>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        @Html.Partial("_SinDatos", "Examenes")
                    }
                    <br />
                </div>
            </td>
        </tr>
    </table>
</div>
